<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dds.sfscourse.dao.CourseMapper">
    <resultMap id="BaseResultMap" type="com.dds.sfscourse.model.Course">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="teacher_name" jdbcType="VARCHAR" property="teacherName" />
        <result column="capacity" jdbcType="INTEGER" property="capacity" />
        <result column="capacity" jdbcType="VARCHAR" property="period" />
        <result column="info" jdbcType="LONGTEXT" property="info" />
        <result column="create_by" jdbcType="BIGINT" property="createBy" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="last_update_by" jdbcType="BIGINT" property="lastUpdateBy" />
        <result column="last_update_time" jdbcType="TIMESTAMP" property="lastUpdateTime" />
        <result column="del_flag" jdbcType="TINYINT" property="delFlag" />
    </resultMap>
    <sql id="Oveview_List">
    id, name, teacher_name, capacity,info, create_by, create_time, last_update_by, last_update_time,
    del_flag
  </sql>
    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Oveview_List" />
        from course
        where id = #{id,jdbcType=BIGINT}
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        select
        <include refid="Oveview_List" />
        from course
    </select>
    <select id="findPage" resultMap="BaseResultMap">
        select
        <include refid="Oveview_List" />
        from course
    </select>
</mapper>